# Server Configuration
NODE_ENV=development
PORT=4000
HOST=0.0.0.0

# Database
MONGODB_URI=mongodb://localhost:27017/uae-work-hub
MONGODB_TEST_URI=mongodb://localhost:27017/uae-work-hub-test

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-here
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here
REFRESH_TOKEN_EXPIRES_IN=30d

# UAE Pass OAuth (UAE Government Authentication)
UAE_PASS_CLIENT_ID=your-uae-pass-client-id
UAE_PASS_CLIENT_SECRET=your-uae-pass-client-secret
UAE_PASS_REDIRECT_URI=http://localhost:3000/auth/uae-pass/callback

# External APIs
DUBAI_2040_API_KEY=your-dubai-2040-api-key
UAE_PRAYER_TIMES_API_KEY=your-prayer-times-api-key
DUBAI_MUNICIPALITY_API_KEY=your-dubai-municipality-api-key

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# File Upload
MAX_FILE_SIZE=50MB
UPLOAD_DIR=./uploads
AWS_S3_BUCKET=uae-work-hub-files
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=me-south-1

# Email (UAE-compliant email service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@uaeworkhub.ae
SMTP_PASS=your-email-password

# AI Service
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_API_KEY=your-ai-service-key

# Security
CORS_ORIGIN=http://localhost:3000,https://uaeworkhub.ae
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Cultural Features
DEFAULT_TIMEZONE=Asia/Dubai
DEFAULT_LANGUAGE=ar-AE
HIJRI_CALENDAR_ENABLED=true
